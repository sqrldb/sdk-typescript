{
  "name": "squirreldb",
  "version": "0.0.1",
  "description": "TypeScript client for SquirrelDB",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test tests/"
  },
  "keywords": ["squirreldb", "database", "realtime", "websocket", "tcp"],
  "license": "MIT",
  "dependencies": {
    "msgpackr": "^1.11.8"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/bun": "latest"
  }
}
